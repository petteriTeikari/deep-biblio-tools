# Makefile for compiling LaTeX document
# Generated by deep-biblio-tools

MAIN = mcp-draft-refined-v3-1
LATEX = xelatex
BIBTEX = bibtex

all: $(MAIN).pdf

$(MAIN).pdf: $(MAIN).tex references.bib
	$(LATEX) $(MAIN)
	$(BIBTEX) $(MAIN)
	$(LATEX) $(MAIN)
	$(LATEX) $(MAIN)

clean:
	@rm -f $(MAIN).aux $(MAIN).bbl $(MAIN).bcf $(MAIN).blg $(MAIN).log $(MAIN).out $(MAIN).run.xml $(MAIN).toc

distclean: clean
	@rm -f $(MAIN).pdf

.PHONY: all clean distclean
