# Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# Zotero Web API (REQUIRED for bibliography management)
# Get your API key from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your_zotero_api_key_here
ZOTERO_LIBRARY_ID=your_library_id_here
ZOTERO_LIBRARY_TYPE=user
ZOTERO_COLLECTION=dpp-fashion

# CrossRef API (optional, for citation metadata)
CROSSREF_EMAIL=your.email@example.com

# arXiv API (optional)
ARXIV_API_KEY=optional
